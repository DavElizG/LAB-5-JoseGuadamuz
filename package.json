{
  "name": "lab-5-unachat",
  "version": "1.0.0",
  "description": "Secure real-time chat application using Socket.IO",
  "main": "server.js",
  "dependencies": {
    "@okta/oidc-middleware": "^5.5.0",
    "@sentry/node": "^10.23.0",
    "@sentry/profiling-node": "^10.23.0",
    "@sentry/react": "^10.23.0",
    "@sentry/tracing": "^7.120.4",
    "compression": "^1.8.1",
    "consolidate": "^1.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-openid-connect": "^2.19.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "socket.io": "^4.8.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "mocha": "^10.8.2",
    "nyc": "^15.1.0",
    "passport": "^0.7.0",
    "passport-auth0": "^1.4.5",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "mocha",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint --print-config server.js",
    "lint:report": "eslint . --format html --output-file docs/evidences/eslint-report.html",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security:check": "npm audit && npm run lint && npx @cyclonedx/cyclonedx-npm --output-format json --output-file ./docs/sbom-cyclonedx.json",
    "security:scan": "snyk test",
    "security:monitor": "snyk monitor",
    "security:code": "snyk code test",
    "precommit": "npm run lint && npm run test"
  },
  "keywords": [
    "chat",
    "socket.io",
    "express",
    "security",
    "una",
    "eslint"
  ],
  "author": "LAB-5-UNACHAT Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "ws": "^8.17.1"
  }
}
